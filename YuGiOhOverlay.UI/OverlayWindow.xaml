<!-- File: src/YuGiOhOverlay.UI/OverlayWindow.xaml -->
<Window x:Class="YuGiOhOverlay.UI.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YuGiOh Overlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="CanResize"
        MinWidth="380"
        MinHeight="260"
        Width="520"
        Height="420">

    <Border CornerRadius="14" Background="#CC111111" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER (drag area) -->
            <Grid x:Name="HeaderDragArea"
                  Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Overlay Deck Helper (texte)" FontSize="16" Foreground="White"/>
                    <TextBlock Text="Ctrl+F1: Click-through ON/OFF" Margin="0,6,0,0" Foreground="#FFDDDDDD"/>
                </StackPanel>

                <!-- Small icon button -->
                <Button Grid.Column="1"
                        x:Name="OpenDataButton"
                        Width="34"
                        Height="34"
                        Margin="8,0,0,0"
                        ToolTip="Charger / créer data.json"
                        Background="#AA222222"
                        BorderBrush="#33000000"
                        Foreground="White"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="16"
                        Content="&#xE11A;"
                        Click="OpenDataButton_OnClick">
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Ouvrir un fichier data.json..."
                                      Click="MenuOpenFile_OnClick"/>
                            <MenuItem Header="Choisir un dossier (créer data.json)"
                                      Click="MenuChooseFolder_OnClick"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </Grid>

            <!-- Deck selection -->
            <Grid Grid.Row="1" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Deck:"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>

                <ComboBox Grid.Column="1"
                          x:Name="DeckCombo"
                          Width="280"
                          SelectionChanged="DeckCombo_OnSelectionChanged"/>

                <CheckBox Grid.Column="3"
                          x:Name="StartersOnlyCheckBox"
                          Content="Starters only"
                          Foreground="White"
                          VerticalAlignment="Center"
                          Checked="StartersOnlyCheckBox_OnChanged"
                          Unchecked="StartersOnlyCheckBox_OnChanged"/>
            </Grid>

            <!-- Main -->
            <Grid Grid.Row="2" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" CornerRadius="10" Background="#AA222222" Padding="8">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top"
                                   Text="Cartes"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>

                        <!-- Cards list with priority + tag pills -->
                        <ListBox x:Name="CardsList"
                                 SelectionChanged="CardsList_OnSelectionChanged"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White">

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   Foreground="White"
                                                   TextTrimming="CharacterEllipsis"
                                                   VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="1"
                                                    Orientation="Horizontal"
                                                    Margin="8,0,0,0"
                                                    VerticalAlignment="Center">

                                            <!-- Priority pill -->
                                            <Border Background="#AA444444"
                                                    CornerRadius="10"
                                                    Padding="6,2"
                                                    Margin="0,0,6,0">
                                                <TextBlock Text="{Binding Priority, StringFormat=P:{0}}"
                                                           Foreground="#FFEEEEEE"
                                                           FontSize="11"/>
                                            </Border>

                                            <!-- Tag pills -->
                                            <ItemsControl ItemsSource="{Binding Tags}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#AA333333"
                                                                CornerRadius="10"
                                                                Padding="6,2"
                                                                Margin="4,0,0,0">
                                                            <TextBlock Text="{Binding}"
                                                                       Foreground="#FFDDDDDD"
                                                                       FontSize="11"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Border>

                <Border Grid.Column="2" CornerRadius="10" Background="#AA222222" Padding="8">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top"
                                   Text="Étapes"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>

                        <TextBox x:Name="StepsText"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"/>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
